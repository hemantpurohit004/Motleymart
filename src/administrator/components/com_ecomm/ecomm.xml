<?xml version="1.0" encoding="utf-8"?>
	<extension type="component" version="3.6.2" method="upgrade">
		<name>Ecommerce</name>
		<creationDate>July 2017</creationDate>
		<author>Shivneri Systems</author>
		<version>0.0.1</version>
		<install>
			 <sql>
				  <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
			 </sql>
		</install>
		<uninstall>
			 <sql>
				  <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
			 </sql>
		</uninstall>
		<files folder="site">
			<filename>index.html</filename>
			<filename>ecomm.php</filename>
			<filename>controller.php</filename>
			<folder>views</folder>
			<folder>models</folder>
			<folder>controllers</folder>
		</files>
		<languages folder="site/language">
		<language tag="en-GB">en-GB.com_ecomm.ini</language>
        </languages>
		<administration>
		<menu link="option=com_ecomm" view="ecomm">Ecomm</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>ecomm.php</filename>
			<filename>controller.php</filename>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>sql</folder>
			<folder>assets</folder>
			<folder>models</folder>
			<folder>helpers</folder>
			<folder>services</folder>
			<folder>controllers</folder>
			<folder>images</folder>
		</files>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB.com_ecomm.ini</language>
			<language tag="en-GB">en-GB.com_ecomm.sys.ini</language>
		</languages>
		</administration>
	</extension>
