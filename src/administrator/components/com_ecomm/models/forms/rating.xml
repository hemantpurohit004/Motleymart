<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic" addfieldpath="/administrator/components/com_ecomm/models/fields">
		<field
				name="object_id"
				type="objectlist"
				label="Object id"
				>
		</field>
		<field
				name="user_id"
				type="user"
				label="User"
				description="Choose the user"
				size="50"
				required="true"
				/>
		<field
				name="product_id"
				type="number"
				label="Product id"
				description="Enter product id"
				required="true"
				/>
		<field
				name="rating"
				type="number"
				min="0"
				max="5"
				label="Rating (out of 5)"
				description="Enter rating out of 5"
				required="true"
				/>
		<field
				name="comment"
				type="text"
				label="Comment"
				description="Enter comment"
				required="true"
				/>
		<field
				name="id"
				type="hidden"
				/>
	</fieldset>
</form>
