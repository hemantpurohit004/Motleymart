<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic" addfieldpath="/administrator/components/com_ecomm/models/fields">
		<field
				name="name"
				type="text"
				label="Name"
				description="Enter name"
				required="false"
				/>
		<field
				name="email"
				type="email"
				label="Email"
				description="Enter email"
				required="true"
				/>
		<field
				name="mobile_no"
				type="text"
				label="Mobile No"
				description="Enter mobile no"
				required="false"
				/>
		<field
				name="rating"
				type="number"
				min="0"
				max="5"
				label="Rating (out of 5)"
				description="Enter rating out of 5"
				required="false"
				/>
		<field
				name="feedback"
				type="textarea"
				label="Feedback"
				description="Enter feedback"
				required="true"
				rows="10"
				/>
		<field
				name="user_id"
				type="hidden"
				/>
		<field
				name="id"
				type="hidden"
				/>
	</fieldset>
</form>
