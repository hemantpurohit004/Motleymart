	<author>TechJoomla</author>
	<creationDate>31sh Aug 2013</creationDate>
	<copyright>Techjoomla. All Rights Reserved.</copyright>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>http://www.techjoomla.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>2.0.1</version>
	<description>Pay By Purchase Order plugin  from Techjoomla. </description>
	<files>
		<filename plugin="byorder">byorder.php</filename>
		<folder>byorder</folder>
	</files>
		<languages>
			<language tag="en-GB">en-GB/en-GB.plg_payment_byorder.ini</language>
  	</languages>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_name" type="text" default="Cash On Delivery" label="PLG_NAME" description="" />
				<field name="log_write" type="radio" default="0" label="PLG_ORDER_WRITE_LOG"	description="PLG_ORDER_WRITE_LOG_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
